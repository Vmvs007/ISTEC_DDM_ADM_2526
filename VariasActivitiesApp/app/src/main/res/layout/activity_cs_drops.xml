<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mega_gambling_grey"
    android:orientation="vertical"
    tools:context=".CsDropsActivity">

    <LinearLayout
        android:id="@+id/layout_cabecalho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mega_gambling_grey"
        android:orientation="horizontal"
        android:paddingTop="75dp">

        <TextView
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:text="quimCsMaster64"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:text="250 C"

            android:textColor="@color/credit_yellow"
            android:textSize="16dp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/credit_yellow"
        android:padding="20dp"
        android:text="ADD FUNDS"
        app:cornerRadius="0dp" />

    <LinearLayout
        android:id="@+id/layout_case_01"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/fire_red"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <LinearLayout
            android:id="@+id/layout_case_free"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_case_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:text="FREE"
                android:textColor="@color/free_green"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_case_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/case_free" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_case_normal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <TextView
                android:id="@+id/text_case_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="30 C"
                android:textColor="@color/free_green"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/image_case_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/case_normal" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_case_02"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/fire_red"
        android:orientation="horizontal"
        android:paddingStart="10dp">


        <LinearLayout
            android:id="@+id/layout_case_epic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_case_epic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="100 C"
                android:textColor="@color/free_green"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/image_case_epic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/case_epic" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_case_legendary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_case_legendary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="250 C"
                android:textColor="@color/free_green"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/image_case_legendary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/case_lendary" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/text_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/fire_red"
        android:gravity="center"
        android:text="''QUEM NÃO ARRISCA, NÃO COME BACALHAU''"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/layout_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/mega_gambling_grey"
        android:orientation="horizontal">


    </LinearLayout>


</LinearLayout>